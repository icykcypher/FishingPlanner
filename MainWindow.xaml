<Window x:Class="FishingPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FishingPlanner.ViewModels" 
        Title="Fishing Planner" Height="600" Width="900">

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#FF3399FF" Margin="10" >
            <Button Content="Calendar" Margin="5" Command="{Binding ShowCalendarCommand}" />
            <Button Content="Add Event" Margin="5" Command="{Binding ShowAddEventCommand}" />
            <Button Content="Tips" Margin="5" Command="{Binding ShowTipsCommand}" />
        </StackPanel>

        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>
